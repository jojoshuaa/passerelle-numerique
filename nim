#!/bin/bash

game_running=true

while [ "$game_running" = true]
do


let joueur1 =();
let allumette = 0;
let pioche = 0;


if [ "$allumette" == 20]
echo ####### Nime game #######
echo
" 20 item(s): |||||||||||||||||||| "
echo
" How many items do you want to take [between 1-3] ? " [pioche => 1 | =< 3]
then
echo
" 17 item(s) : ||||||||||||||||| "
echo
" ==> IA takes " [pioche] "..."
else
game_running = false

fi

done

